<Page x:Class="SampleClient.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleClient"
      mc:Ignorable="d"
      Title="Chat" Width="325" Height="420">

    <Grid Background="#FFB1B1B1" Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" x:Name="viewTextBox" 
         TextWrapping="Wrap" Width="304" Height="345" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" RenderTransformOrigin="0.526,-1.058" KeyDown="inputTextBox_KeyDown" Grid.Row="1" Height="35"/>
        <Button Content="Send" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="2" Height="40" Width="40" Margin="3,3,0,0" FontWeight="Bold" Click="Button_Click"/>



    </Grid>
</Page>
